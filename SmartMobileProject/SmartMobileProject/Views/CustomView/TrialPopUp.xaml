<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:vm="clr-namespace:SmartMobileProject.ViewModels"
             x:Class="SmartMobileProject.Views.CustomView.TrialPopUp">
    <ContentView.BindingContext>
        <vm:TrialPopUpViewModel/>
    </ContentView.BindingContext>
  <ContentView.Content>
        <Grid>
            <StackLayout x:Name="BackGreyColor" BackgroundColor="#80000000" ></StackLayout>
            <Frame Margin="20"
                   CornerRadius="10"
                   x:Name="PopUp">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0"
                           HorizontalOptions="Center"
                           Text="Choose your plan"
                           FontSize="30"/>
                    <Frame Grid.Row="1"
                           CornerRadius="20"
                           HasShadow="True"
                           BorderColor="LightGray"
                           BackgroundColor="LightGray"
                           x:Name="Frame1"
                           Scale="0.9">
                        <StackLayout>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Tapped="Frame1_Tapped"/>
                            </StackLayout.GestureRecognizers>
                            <Label HorizontalOptions="Center"
                               Text="30-Day free trial"
                               FontSize="30"/>
                            <Label HorizontalOptions="Center"
                                   Text="Full use for limited time"
                                   TextColor="Gray"
                               FontSize="15"/>
                        </StackLayout>
                    </Frame>
                    <Frame Grid.Row="2"
                           CornerRadius="20"
                           HasShadow="True"
                           BorderColor="LightGray"
                           BackgroundColor="LightGray"
                           x:Name="Frame2"
                           Scale="0.9">
                        <StackLayout>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Tapped="Frame2_Tapped"/>
                            </StackLayout.GestureRecognizers>
                            <Label HorizontalOptions="Center"
                               Text="Start today"
                               FontSize="30"/>
                            <Label HorizontalOptions="Center"
                                   Text="Full use for xxx $ "
                                   TextColor="Gray"
                               FontSize="15"/>
                        </StackLayout>
                    </Frame>
                    <Label Grid.Row="3"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           x:Name="bottomText"
                           Text="{Binding BottomText}"/>
                    <Button Grid.Row="4"
                            VerticalOptions="End"
                            Margin="30"
                            CornerRadius="30"
                            Text="Continue"
                            Clicked="Continue_Button_Clicked"/>
                </Grid>
            </Frame>
        </Grid>
    </ContentView.Content>
</ContentView>